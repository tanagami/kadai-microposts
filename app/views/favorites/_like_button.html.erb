  <% if current_user.like?(micropost_favorite) %>
    <%= form_for(current_user.microposts.find_by(micropost_id: micropost_favorite.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost_favorite.id %>
      <%= f.submit 'Unlike', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.microposts.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost_favorite.id %>
      <%= f.submit 'Like', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>